package com.domain;

public class Player {
	private String name;
	private int score = 0;

	public Player(String name) {
		this.name = name;
	}

	public void addScore() {
		this.score++;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getScore() {
		return score;
	}

	public void setScore(int score) {
		this.score = score;
	}
}
